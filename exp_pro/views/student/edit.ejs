<%- include("../includes/header") %>
<div class="container my-5" style="min-height: 700px; margin-top: 80px;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form action="/student/update/<%= data._id %>" method="post">
            <h2>Update Student</h2>
            <div class="form-group">
                <label for="">Full Name</label>
                <input value="<%= data.fullname %>" autocomplete="off" type="text" name="fullname" class="form-control" />
            </div>
            <div class="form-group">
                <label for="">Age</label>
                <input value="<%= data.age %>" autocomplete="off" type="text" name="age" class="form-control" />
            </div>
            <div class="form-group">
                <label for="">City</label>
                <select class="form-control" name="city">
                    <option>Select</option>
                    <option <% if(data.city == 'Indore'){ %> selected <% } %>>Indore</option>
                    <option <% if(data.city == 'Bhopal'){ %> selected <% } %>>Bhopal</option>
                    <option <% if(data.city == 'Mumbai'){ %> selected <% } %>>Mumbai</option>
                    <option <% if(data.city == 'Pune'){ %> selected <% } %>>Pune</option>
                </select>
            </div>
            <br />
            <input type="submit" value="Update" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>
<%- include("../includes/footer") %>